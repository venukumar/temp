<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android1:layout_marginBottom="1dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:divider="@drawable/div_light_grey"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle|end" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ToggleButton
                android:id="@+id/button_singles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ToggleButton"
                android:textOff="Singles (2)"
                android:textOn="Singles (2)"
                android:textSize="18sp"
                android:textStyle="bold"
                android1:checked="true" />

            <ToggleButton
                android:id="@+id/button_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="ToggleButton"
                android:textOff="Friends (1)"
                android:textOn="Friends (1)"
                android:textSize="18sp"
                android:textStyle="bold"
                android1:checked="true" />

            <ImageView
                android1:id="@+id/ImageView14"
                android1:layout_width="30dp"
                android1:layout_height="40dp"
                android1:layout_gravity="center_vertical"
                android1:layout_weight="0.50"
                android1:src="@drawable/filter" />

        </LinearLayout>

        <LinearLayout
            android1:id="@+id/view_singles"
            android1:layout_width="fill_parent"
            android1:layout_height="wrap_content"
            android1:background="@drawable/div_light_grey"
            android1:orientation="vertical"
            android1:showDividers="beginning|middle|end" >

        </LinearLayout>

        <LinearLayout
            android1:id="@+id/friends"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:background="@drawable/div_light_grey"
            android1:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</ScrollView>