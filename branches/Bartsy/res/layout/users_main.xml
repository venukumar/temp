<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android1:layout_marginBottom="1dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:divider="@drawable/div_light_grey"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle|end" >

        <LinearLayout
            android1:id="@+id/view_singles"
            android1:layout_width="fill_parent"
            android1:layout_height="wrap_content"
            android1:background="@drawable/div_light_grey"
            android1:orientation="vertical"
            android1:showDividers="beginning|middle|end" >

        </LinearLayout>

        <LinearLayout
            android1:id="@+id/friends"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:background="@drawable/div_light_grey"
            android1:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</ScrollView>